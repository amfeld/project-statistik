<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Custom list view for projects in account module -->
    <record id="view_project_list_account_analytics" model="ir.ui.view">
        <field name="name">project.project.list.account.analytics</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <list string="Project Analytics" create="false" edit="false" delete="false" open_form_view="True" action="action_open_project_dashboard">
                <field name="client_name" string="Name of Client"/>
                <field name="name" string="Name of Project"/>
                <field name="head_of_project" string="Head of Project"/>

                <!-- Customer Invoice Fields -->
                <field name="customer_invoiced_amount" string="Total Invoiced Amount" sum="Total Invoiced" optional="show"/>
                <field name="customer_paid_amount" string="Total Paid Amount" sum="Total Paid" optional="show"/>
                <field name="customer_outstanding_amount" string="Outstanding Amount" sum="Total Outstanding" optional="show" decoration-danger="customer_outstanding_amount != 0"/>
                <field name="customer_skonto_taken" string="Customer Cash Discounts (Skonto)" sum="Total Skonto Given" optional="hide"/>

                <!-- Vendor Bills -->
                <field name="vendor_bills_total" string="Vendor Bills Total" sum="Total Vendor Bills" optional="show"/>
                <field name="vendor_skonto_received" string="Vendor Cash Discounts Received" sum="Total Skonto Received" optional="hide"/>

                <!-- Cost Fields -->
                <field name="total_costs_net" string="Net Costs (without tax)" sum="Total Costs Net" optional="show"/>
                <field name="total_costs_with_tax" string="Total Costs (with tax)" sum="Total Costs with Tax" optional="hide"/>

                <!-- Profitability -->
                <field name="profit_loss" string="Profit/Loss Amount" sum="Total Profit/Loss" optional="show" decoration-success="profit_loss &gt; 0" decoration-danger="profit_loss &lt; 0"/>
                <field name="negative_difference" string="Negative Differences (losses)" sum="Total Losses" optional="hide"/>

                <!-- Labor -->
                <field name="total_hours_booked" string="Total Hours Booked" sum="Total Hours" optional="show"/>
                <field name="labor_costs" string="Labor Costs" sum="Total Labor Costs" optional="show"/>
            </list>
        </field>
    </record>

    <record id="view_project_pivot_account_analytics" model="ir.ui.view">
        <field name="name">project.project.pivot.account.analytics</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <pivot string="Project Analytics Pivot">
                <!-- Customer Invoice Measures -->
                <field name="customer_invoiced_amount" type="measure"/>
                <field name="customer_paid_amount" type="measure"/>
                <field name="customer_outstanding_amount" type="measure"/>
                <field name="customer_skonto_taken" type="measure"/>

                <!-- Vendor Bill Measures -->
                <field name="vendor_bills_total" type="measure"/>
                <field name="vendor_skonto_received" type="measure"/>

                <!-- Cost Measures -->
                <field name="total_costs_net" type="measure"/>
                <field name="total_costs_with_tax" type="measure"/>

                <!-- Profitability Measures -->
                <field name="profit_loss" type="measure"/>
                <field name="negative_difference" type="measure"/>

                <!-- Labor Measures -->
                <field name="total_hours_booked" type="measure"/>
                <field name="labor_costs" type="measure"/>

                <!-- Dimension fields - available for grouping -->
                <field name="name" type="row"/>
                <field name="client_name"/>
                <field name="stage_id"/>
                <field name="user_id"/>
                <field name="partner_id"/>
                <field name="company_id"/>
                <field name="create_date"/>
                <field name="date_start"/>
            </pivot>
        </field>
    </record>

    <!-- Graph view for visual analytics -->
    <record id="view_project_graph_account_analytics" model="ir.ui.view">
        <field name="name">project.project.graph.account.analytics</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <graph string="Project Analytics Graph" type="bar" sample="1">
                <field name="name"/>
                <field name="customer_invoiced_amount" type="measure"/>
                <field name="vendor_bills_total" type="measure"/>
                <field name="profit_loss" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Form view for drill-down details -->
    <record id="view_project_form_account_analytics" model="ir.ui.view">
        <field name="name">project.project.form.account.analytics</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <form string="Project Details" create="false" edit="false" delete="false">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_account_analytic_line" type="object" class="oe_stat_button" icon="fa-pencil-square-o" string="Analytic Lines"/>
                        <button name="action_open_standard_project_form" type="object" class="oe_stat_button" icon="fa-tasks" string="Project Details"/>
                    </div>
                    <group>
                        <group name="project_info">
                            <field name="name"/>
                            <field name="client_name"/>
                            <field name="head_of_project"/>
                            <field name="partner_id"/>
                            <field name="user_id"/>
                            <field name="stage_id"/>
                        </group>
                        <group name="dates">
                            <field name="date_start"/>
                            <field name="date"/>
                            <field name="create_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Customer Invoices" name="customer_invoices">
                            <group>
                                <group>
                                    <field name="customer_invoiced_amount"/>
                                    <field name="customer_paid_amount"/>
                                    <field name="customer_outstanding_amount"/>
                                </group>
                                <group>
                                    <field name="customer_skonto_taken"/>
                                </group>
                            </group>
                        </page>
                        <page string="Vendor Bills" name="vendor_bills">
                            <group>
                                <group>
                                    <field name="vendor_bills_total"/>
                                </group>
                                <group>
                                    <field name="vendor_skonto_received"/>
                                </group>
                            </group>
                        </page>
                        <page string="Costs" name="costs">
                            <group>
                                <group>
                                    <field name="total_costs_net"/>
                                    <field name="total_costs_with_tax"/>
                                </group>
                                <group>
                                    <field name="total_hours_booked"/>
                                    <field name="labor_costs"/>
                                </group>
                            </group>
                        </page>
                        <page string="Profitability" name="profitability">
                            <group>
                                <group>
                                    <field name="profit_loss" class="text-success" widget="monetary"/>
                                    <field name="negative_difference"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Window action for project analytics -->
    <record id="action_project_analytics_report" model="ir.actions.act_window">
        <field name="name">Project Statistic</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">list,pivot,graph,form</field>
        <field name="view_ids" eval="[
      (5, 0, 0),
      (0, 0, {'view_mode': 'list', 'view_id': ref('view_project_list_account_analytics')}),
      (0, 0, {'view_mode': 'pivot', 'view_id': ref('view_project_pivot_account_analytics')}),
      (0, 0, {'view_mode': 'graph', 'view_id': ref('view_project_graph_account_analytics')}),
      (0, 0, {'view_mode': 'form', 'view_id': ref('view_project_form_account_analytics')})
    ]"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No projects found</p>
            <p>This view shows all projects for analytics and reporting purposes with detailed customer and vendor tracking.</p>
        </field>
    </record>

    <menuitem id="menu_project_analytics_main"
              name="Project Statistic"
              parent="account.menu_finance"
              sequence="25"
              groups="account.group_account_readonly"/>

    <menuitem id="menu_project_analytics_dashboard"
              name="Dashboard"
              parent="menu_project_analytics_main"
              action="action_project_analytics_report"
              sequence="1"
              groups="account.group_account_readonly"/>

    <!-- Inherit standard project form to add analytics button -->
    <record id="view_project_form_inherit_analytics_button" model="ir.ui.view">
        <field name="name">project.project.form.inherit.analytics.button</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_open_analytics_form"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-line-chart"
                        string="Financial Analytics"
                        groups="account.group_account_readonly"/>
            </xpath>
        </field>
    </record>
</odoo>